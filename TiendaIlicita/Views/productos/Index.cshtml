
@model IEnumerable<TiendaIlicita.productos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/css")


    @Html.ActionLink("+", "Create",null,new { @class="btn btn-success text-light my-3 fw-bold"})
<div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4">

    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100" style="width: 18rem;">
                <img src="@Url.Content(item.img)" class="card-img-top" style="height:13em">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.nombre)</h5>
                    <p class="card-text"> @Html.DisplayFor(modelItem => item.descripcion)</p>
                    <h6>$@Html.DisplayFor(modelItem => item.precio)</h6>
                    <button class="btn btn-warning">Comprar</button>
                    <div>
                        @Html.ActionLink("Edit", "Edit", new { id = item.id},new { @class="text-primary"}) |
                        @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "text-dark" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

    }

</div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")