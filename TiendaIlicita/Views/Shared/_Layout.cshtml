<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container-fluid d-flex w-100 justify-content-between">
            <div class="d-flex align-items-center">
                <img src="https://images.cointelegraph.com/images/240_aHR0cHM6Ly9zMy5jb2ludGVsZWdyYXBoLmNvbS9zdG9yYWdlL3VwbG9hZHMvdmlldy9mYjUxYjg5MjMwOTEyOTdiMzYxNjMyNjc1NmU1MjI3MC5wbmc=.png" width="100px" />
                <span class="fs-1 text-white">Silk Road</span>
            </div>

            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>
 
                <li class="nav-item">@Html.ActionLink("Galeria", "Index", "productos", null, new { @class = "nav-link" })</li>
            </ul>

        </div>
    </nav>
    <div class="container-fluid body-content px-5">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>


